<body class="{{body_class}}" data-template="page_masonry-base.twig">
	<a class="skip-link screen-reader-text" href="#content">Skip to content</a>

	{% include 'includes/header.twig' %}

	<main id="content" class="content-container">
		
		{% if lead_text %}
			<div>
				<p class="lead-text">
					{% block leadtext %}
						{{ lead_text }}
					{% endblock %}
				</p>
				<p>
					{% block addleadtext %}
						{{ add_lead_text }}
					{% endblock %}
				</p>					
			</div>
		{% endif %}

		<div id="masonry-grid" class="main-grid">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>

	</main>

	{% include 'page_headers_footers/footers/footer.twig' %}
</body>